{% extends 'base.html.twig' %}

{% block title %}Log in!{% endblock %}

{% block body %}
    <section class="bg-background-light dark:bg-background-dark">
        <div class="flex flex-col items-center justify-center px-6 py-8 mx-auto md:h-screen lg:py-0">
            <div class="w-full bg-secondary-light dark:bg-secondary-dark rounded-lg shadow dark:border md:mt-0 sm:max-w-md xl:p-0 ">
                <div class="p-6 space-y-4 md:space-y-6 sm:p-8">

                    {% if error %}
                        <div class="alert alert-danger p-4 mb-4 text-sm rounded-lg">
                            {{ error.messageKey|trans(error.messageData, 'security') }}
                        </div>
                    {% endif %}

                    {% if app.user %}
                        <div class="p-4 mb-4 text-sm rounded-lg bg-blue-50 dark:bg-gray-800 text-text-light dark:text-text-dark">
                            You are logged in as {{ app.user.userIdentifier }}
                            <div>
                                <a href="{{ path('app_logout') }}">Click here to logout</a>
                            </div>
                        </div>
                    {% endif %}

                    <h1 class="text-xl font-bold leading-tight tracking-tight md:text-2xl text-text-light dark:text-text-dark">
                        Sign in to your account
                    </h1>
                    <form class="space-y-4 md:space-y-6" method="post">
                        <div>
                            <label for="username" class="block mb-2 text-sm font-medium text-text-light dark:text-text-dark">Your email</label>
                            <input type="email" name="_username" id="username" value="{{ last_username }}" class="bg-blue-50 dark:bg-gray-800 border border-gray-300 sm:text-sm rounded-lg focus:ring-primary-600 focus:border-primary-600 block w-full p-2.5 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500" placeholder="example@email.com" required autofocus>
                        </div>
                        <div>
                            <label for="password" class="block mb-2 text-sm font-medium text-text-light dark:text-text-dark">Password</label>
                            <input type="password" name="_password" id="password" placeholder="••••••••" class="bg-blue-50 dark:bg-gray-800 border border-gray-300 sm:text-sm rounded-lg focus:ring-primary-600 focus:border-primary-600 block w-full p-2.5 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500" required>
                        </div>
                        <div>
                            <input type="hidden" name="_csrf_token"
                                   value="{{ csrf_token('authenticate') }}"
                            >
                        </div>
